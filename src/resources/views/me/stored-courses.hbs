<div class='mt-4'>
    <h1>My Courses</h1>
    <table class='table'>
        <thead>
            <tr>
                <th scope='col'>ID</th>
                <th scope='col'>Name</th>
                <th scope='col'>Level</th>
                <th scope='col'>Created Time</th>
                <th scope='col'></th>
            </tr>
        </thead>
        <tbody>
            {{#each courses}}
                <tr>
                    <th scope='row'>{{sum @index 1}}</th>
                    <td>{{this.name}}</td>
                    <td>{{this.level}}</td>
                    <td>{{formatDate this.createdAt}}</td>
                    <td>
                        <a
                            href='/courses/{{this._id}}/edit'
                            class='btn btn-warning'
                        >Edit</a>
                        <form
                            action='/courses/{{this._id}}/delete'
                            method='POST'
                            style='display:inline;'
                        >
                            <button
                                type='submit'
                                class='btn btn-danger'
                            >Delete</button>
                        </form>

                    </td>
                </tr>
            {{/each}}
        </tbody>
    </table>
</div>